<Window x:Class="ocr_demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ocr_demo"
        mc:Ignorable="d"
        Title="OCR Demo" Height="907" Width="795">
    <Grid>
        <Button x:Name="loadDocumentBtn" Content="Load Document" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="93" Click="loadDocumentBtn_Click"/>
        <TextBox x:Name="sourcePathTxtBox" Margin="108,9,10,0" TextWrapping="Wrap" Height="24" VerticalAlignment="Top" IsEnabled="False"/>
        <Image x:Name="sourceImage" Margin="10,38,10,157" RenderTransformOrigin="0.484,0.507"/>
        <Button x:Name="processBtn" Content="Process" HorizontalAlignment="Left" Margin="10,0,0,132" VerticalAlignment="Bottom" Width="75" RenderTransformOrigin="0.071,0.544" Click="button1_Click" IsEnabled="False"/>
        <ListView x:Name="listView" Margin="10,0,10,4" Height="110" VerticalAlignment="Bottom">
            <ListView.View>
                <GridView/>
            </ListView.View>

        </ListView>
        <Label x:Name="progressLabel" Content="" HorizontalAlignment="Left" Margin="90,724,0,126" RenderTransformOrigin="-0.49,0.485" Width="687" IsEnabled="False" Visibility="Hidden"/>

    </Grid>
</Window>
